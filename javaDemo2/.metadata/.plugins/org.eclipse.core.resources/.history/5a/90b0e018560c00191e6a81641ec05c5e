import java.util.regex.Pattern;

/**
 * demo70 正则表达式
 *  */
public class demo70 {
	private String str;
	public static void main(String[] args) {
		demo70 demo = new demo70();
		
		switch (1) {
		default:
			return;
		case 1:
			demo.test();
			break;
		}
	}
	
	public void test() {
		String str1 = new String("hello, world!");
		str = str1.replaceFirst("\\w*\\s+", "\u307f\u3055\u304b\u307f\u3053\u3068\\\\");
		prtStr();
	}
	
	public void prtStr() {
		System.out.println("[Main]" + this.str);
		System.out.println("\u3055\\");
	}
	
	public void testPM() {
		Pattern p = Pattern.compile("a*b");
	}
}

